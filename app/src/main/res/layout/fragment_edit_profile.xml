<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tvEditMyProfile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Edit My Profile"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tvEditProfileName"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvEditMyProfile"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Name"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:textSize="18dp"
        android:gravity="center" />
    <EditText
        android:id="@+id/etProfileName"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tvEditMyProfile"
        app:layout_constraintStart_toEndOf="@id/tvEditProfileName"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint=""
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginStart="120dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvEditProfileEmail"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etProfileName"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Email"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:textSize="18dp"
        android:gravity="center" />
    <EditText
        android:id="@+id/etProfileEmail"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/etProfileName"
        app:layout_constraintStart_toEndOf="@id/tvEditProfileEmail"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint=""
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="120dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvEditProfileBlurb"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etProfileEmail"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="About Me"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:textSize="18dp"
        android:gravity="center" />
    <EditText
        android:id="@+id/etProfileBlurb"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/etProfileEmail"
        app:layout_constraintStart_toEndOf="@id/tvEditProfileBlurb"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint=""
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="120dp"
        android:gravity="center" />



    <Button
        android:id="@+id/btnChangeNowReading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etProfileBlurb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="100dp"
        android:text="Select new book to read"
        />
    <Button
        android:id="@+id/btnProfileSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnChangeNowReading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Save"
        />

</androidx.constraintlayout.widget.ConstraintLayout>